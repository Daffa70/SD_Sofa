<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailSppActivity"
    android:orientation="horizontal"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Pembayaran"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:id="@+id/profileSiswa"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="20dp"
            android:layout_below="@+id/profileSiswa"
            android:id="@+id/tv1"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_namaSiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama siswa"
            android:textSize="20dp"
            android:layout_toRightOf="@id/tv1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/profileSiswa"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv2"
            android:text="NISN"
            android:layout_below="@+id/tv_namaSiswa"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nisn"
            android:layout_toRightOf="@+id/tv1"
            android:textSize="20dp"
            android:text="222"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/tv_namaSiswa"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv3"
            android:text="Kelas"
            android:layout_below="@+id/tv2"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_kelas"
            android:layout_toRightOf="@+id/tv1"
            android:textSize="20dp"
            android:text="2"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/tv_nisn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv4"
            android:text="Bulan"
            android:layout_below="@+id/tv3"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_bulan"
            android:layout_toRightOf="@+id/tv1"
            android:textSize="20dp"
            android:text="222"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/tv_kelas"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv5"
            android:text="Tanggal"
            android:layout_below="@+id/tv4"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tanggal"
            android:layout_toRightOf="@+id/tv1"
            android:textSize="20dp"
            android:text="222"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/tv_bulan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv6"
            android:text="Status"
            android:layout_below="@+id/tv5"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_status"
            android:layout_toRightOf="@+id/tv1"
            android:textSize="20dp"
            android:text="222"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/tv_tanggal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv7"
            android:text="Bukti"
            android:layout_below="@+id/tv6"
            android:textSize="20dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv7"
            android:src="@drawable/no_image"
            android:layout_marginTop="20dp"
            android:id="@+id/image_bukti"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Konfirmasi"
            android:layout_below="@id/image_bukti"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            />

    </RelativeLayout>



</ScrollView>